<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingRight="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/historiaItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:elevation="18dp"
            android:translationZ="5dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/portada"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Fulanito Armando"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconoFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@drawable/baseline_calendar_today_24" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masculino, 21 aÃ±os"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="9"
        android:gravity="center">

        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:background="@drawable/badge_success"
            android:textColor="@color/badgeSuccessTextColor"
            android:text="Sin publicar"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>