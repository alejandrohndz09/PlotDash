<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/historiaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="8dp"
                android:elevation="18dp"
                android:translationZ="5dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/portada"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titulohis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:paddingLeft="6dp"
                    android:text="Title"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/genero"
                    android:maxLines="6"
                    android:paddingLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:id="@+id/iconoCalif2"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:scaleType="fitCenter"
                            tools:srcCompat="@drawable/baseline_star_rate_24" />

                        <TextView
                            android:id="@+id/calificacion"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:gravity="center_vertical"
                            android:text="5.0"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:id="@+id/iconoVista2"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="5"
                            android:scaleType="fitCenter"
                            tools:srcCompat="@drawable/baseline_remove_red_eye_24" />

                        <TextView
                            android:id="@+id/vistas"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="5.0"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"

                        android:paddingVertical="5dp">

                        <ImageView
                            android:id="@+id/iconoUser2"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:scaleType="fitCenter"
                            tools:srcCompat="@drawable/baseline_person_24" />
                        <TextView
                            android:id="@+id/autor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="user_example"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:text="SinÃ³psis"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:text="Title"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/edittext"
        android:elevation="3dp"
        android:orientation="vertical" />


</LinearLayout>